{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "moduleResolution": "Node",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {},
    "typeRoots": ["@types"],
    "types": ["@types/mocha"],
    "outDir": "./dist"
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*.ts"]
}
